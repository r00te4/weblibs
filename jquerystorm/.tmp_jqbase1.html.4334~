		<script type='text/javascript' src="lib/jquery.js"></script>
	
		<script type='text/javascript'>
			$(function(){
				alert("Welcome to jQuery Storm");
				$("#myphoto").attr("src","pic/cat.jpg");
				$("#myphoto").css({width:"200px",
				height:"400px",
				border:"4px solid red"
				});
				
				
				var array=new Array();
				array.push("123");
				array.push("456");
				alert("Array: "+Object.prototype.toString.call(array));
				alert("jQuery Object "+$("#myphoto").toString());
				
				
				
				alert("myphoto 的路径"+$("#myphoto")[0].src);
				$(".myphotos").each(function(){
					//this.src="test"+i+".jpg";
					alert(this.src);
				})
				
				
				//原生DOM转换成jQuery的DOM
				
				var newimg=document.getElementById("newphoto");
				$(newimg).css({border:"3px solid green"}).attr('src','./pic/donkey.jpg');
			})
		
			
		</script>
		
    </head>
